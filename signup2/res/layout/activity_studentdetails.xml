<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Studentdetails" >

    <Button
        android:id="@+id/btnaddstud"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="add student" />

    <Button
        android:id="@+id/btndltstud"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnaddstud"
        android:layout_centerHorizontal="true"
        android:text="delete student" />

    <Button
        android:id="@+id/btnupdatestud"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btndltstud"
        android:layout_below="@+id/btndltstud"
        android:text="update student" />

    <Button
        android:id="@+id/btnsearchstud"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnupdatestud"
        android:layout_below="@+id/btnupdatestud"
        android:text="search student" />

    <Button
        android:id="@+id/btnstudfeedback"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnsearchstud"
        android:layout_below="@+id/btnsearchstud"
        android:text="feedback" />

</RelativeLayout>
